{
  "$schema": "http://json.schemastore.org/template",
  "author": "@prince272",
  "classifications": [ "C#", "JavaScript", "TypeScript", "Mobile", "IOS", "Android", "Web App", "Web API" ],
  "identity": "NextSolution.Template",
  "name": "Next Solution",
  "description": "A comprehensive starter solution template designed for rapidly creating modern and efficient applications across Mobile (iOS and Android), Web, and API.",
  "shortName": "nextsln",
  "sourceName": "Next-Solution",
  "preferNameDirectory": true,
  "guids": [
    "1A114D3A-52AA-408F-ACFE-89A437A9BCC4",
    "24FBFF44-2F91-4C05-BBDE-6FB7E43EF1B3"
  ],
  "tags": {
    "type": "solution",
    "language": "C#"
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/*.filelist",
        "**/*.lock.json",
        "**/*.rsuser",
        "**/*.suo",
        "**/*.user",
        "**/*.userosscache",
        "**/*.sln.docstates",
        "**/[Dd]ebug/**",
        "**/[Dd]ebugPublic/**",
        "**/[Rr]elease/**",
        "**/[Rr]eleases/**",
        "**/x64/**",
        "**/x86/**",
        "**/[Ww][Ii][Nn]32/**",
        "**/[Aa][Rr][Mm]/**",
        "**/[Aa][Rr][Mm]64/**",
        "**/bld/**",
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        "**/[Oo]ut/**",
        "**/[Ll]og/**",
        "**/[Ll]ogs/**",
        ".template.config/**/*",
        "docs/template/**/*",
        "LICENSE.txt",
        "**/.vs/**",
        "**/.git/**",
        "**/.github/**",
        "**/*.gitattributes",
        "**/*.gitignore",
        "**/*.nuspec"
      ],
      "rename": {
        "README-template.md": "README.md"
      },
      "modifiers": [
        {
          "condition": "(!includeExpoProject)",
          "exclude": [ "src/Next-Solution.ExpoApp/**/*" ]
        },
        {
          "condition": "(!includeNextProject)",
          "exclude": [ "src/Next-Solution.NextApp/**/*" ]
        }
      ]
    }
  ],
  "symbols": {
    "title": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "title",
      "replaces": "Next Solution"
    },
    "slug": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "slug",
      "replaces": "next-solution"
    },
    "includeExpoProject": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include Expo Project. (Ngrok is recommended for exposing APIs to your Expo app)",
      "description": "Adds an Expo project to the solution.",
      "defaultValue": "false"
    },
    "includeNextProject": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Include Next.js Project",
      "description": "Adds a Next.js project to the solution.",
      "defaultValue": "false"
    },
    "configureNgrok": {
      "type": "parameter",
      "datatype": "bool",
      "displayName": "Configure Ngrok Tunneling (requires Ngrok signup to get a token and a custom domain)",
      "description": "Configures a secure tunnel from a public URL to your local development environment, allowing you to expose your APIs to the internet for testing and development purposes.",
      "defaultValue": "false"
    },
    "serverHttpPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 5000,
        "high": 5500
      },
      "replaces": "5282"
    },
    "serverHttpsPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 7000,
        "high": 7500
      },
      "replaces": "7135"
    },
    "clientHttpPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 3000,
        "high": 3500
      },
      "replaces": "3157"
    },
    "clientHttpsPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 6000,
        "high": 6500
      },
      "replaces": "6251"
    }
  },
  "forms": {
    "slug": {
      "identifier": "chain",
      "steps": [ "hyphenReplace", "lowerCase" ]
    },
    "title": {
      "identifier": "chain",
      "steps": [ "titleCase", "spaceReplace" ]
    },
    "lowerCase": {
      "identifier": "lowerCase"
    },
    "titleCase": {
      "identifier": "titleCase"
    },
    "spaceReplace": {
      "identifier": "replace",
      "pattern": "[-_+~]",
      "replacement": " "
    },
    "hyphenReplace": {
      "identifier": "replace",
      "pattern": "([a-z0-9])([A-Z])|[^a-zA-Z0-9]+",
      "replacement": "$1-$2"
    }
  },
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "node",
        "args": "install-dependencies.js",
        "redirectStandardOutput": false,
        "redirectStandardError": false
      },
      "manualInstructions": [
        {
          "text": "Run 'node install-dependencies.js' to install node dependencies."
        }
      ],
      "continueOnError": true,
      "description": "Installs node dependencies using 'install-dependencies.js'."
    }
  ]
}